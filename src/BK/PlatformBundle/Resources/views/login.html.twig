{% extends 'base.html.twig' %}

{% block body %}
	
	
	{% stylesheets 'bundles/bkplatform/css/main.css' %}
		<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
	{% endstylesheets %}

  
  
  <div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">CONNEXION</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">INSCRIPTION</label>
        <div class="login-form">
			<form action="{{ path('login_check') }}" method="post">
            <div class="sign-in-htm">
                <div class="group">
                    <label for="user" class="label">Login</label>
                    <input id="user" type="text" class="input" id="username" name="_username" value="{{ last_username }}" >
                </div>
                <div class="group">
                    <label for="pass" class="label">Password</label>
                    <input id="pass" type="password" class="input"  name="_password">
                </div>
                <div class="group">
                   
                </div>
                <div class="group">
                    <input type="submit" class="button" value="Se connecter">
                </div>
                <div class="hr"></div>
                <div class="foot-lnk">
					{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
                </div>
            </div>
			</form >
			
			<form action="{{ path('bk_platform_ajout_user') }}" method="POST">
            <div class="sign-up-htm">
                <div class="group">
                    <label for="user" class="label">Login</label>
                    <input id="user" type="text" class="input" id="username" name="_login">
                </div>
                <div class="group">
                    <label for="pass" class="label">Password</label>
                    <input id="pass" type="password" class="input"  name="_password">
                </div>
                <div class="group">
                    <label for="pass" class="label">Age</label>
                    <input id="pass" type="text" class="input" name="_age">
                </div>
				<div class="group">
                    <label for="pass" class="label">Nourriture</label>
                    <input type="text" class="input" name="_nourriture">
                </div>
				<div class="group">
                    <label for="pass" class="label">Race</label>
                    <input type="text" class="input" name="_race">
                </div>
				<div class="group">
                    <label for="pass" class="label">Famille</label>
                    <input type="text" class="input" name="_famille">
                </div>
                <div class="group">
                    <input type="submit" class="button" value="S'inscrire">
                </div>
                <div class="hr">
				
				</div>
                <div class="foot-lnk">
                   
                </div>
            </div>
			</form>
        </div>
    </div>
</div>
   
  
{% endblock %}